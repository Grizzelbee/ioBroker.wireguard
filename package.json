{
  "name": "iobroker.wireguard",
  "version": "1.6.2",
  "description": "Connect to WireGuard hosts and grab connection information on peers",
  "author": {
    "name": "grizzelbee",
    "email": "open.source@hingsen.de"
  },
  "homepage": "https://github.com/Grizzelbee/ioBroker.wireguard",
  "license": "MIT",
  "keywords": [
    "wireguard",
    "monitoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Grizzelbee/ioBroker.wireguard.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.6",
    "@iobroker/plugin-sentry": "^1.2.1",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.7.0",
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.3",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^4.1.1",
    "@material-ui/core": "^4.12.4",
    "@snyk/protect": "^1.1286.1",
    "@types/gulp": "^4.0.17",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.1",
    "mocha": "^10.3.0",
    "parcel-bundler": "^1.5.1",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "watch:parcel": "parcel admin/src/index.jsx -d admin/build",
    "build:parcel": "parcel build admin/src/index.jsx -d admin/build",
    "build": "npm run build:parcel",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "lint": "eslint --ext .js,.jsx",
    "snyk-protect": "snyk-protect",
    "release": "release-script",
    "translate": "translate-adapter"
  },
  "bugs": {
    "url": "https://github.com/Grizzelbee/ioBroker.wireguard/issues"
  },
  "readmeFilename": "README.md",
  "snyk": true
}
